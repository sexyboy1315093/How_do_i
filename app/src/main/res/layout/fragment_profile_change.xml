<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_camera"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/free_icon_camera_stand_482900" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_nickname"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_camera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profile_camera"
        app:layout_constraintTop_toBottomOf="@+id/gallery">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nickname" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button2"
        android:text="Gallery"
        app:layout_constraintEnd_toEndOf="@+id/profile_camera"
        app:layout_constraintStart_toStartOf="@+id/profile_camera"
        app:layout_constraintTop_toBottomOf="@+id/profile_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>